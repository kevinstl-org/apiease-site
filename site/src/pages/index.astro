---
import Layout from '../layouts/Layout.astro';
import Backdrop from '../components/Backdrop.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const capabilities = [
	{
		title: 'HTTP Requests',
		copy: 'Call any API with server-side headers, bodies, and secure tokens handled by APIEase.',
	},
	{
		title: 'Flow Requests',
		copy: 'Let Shopify Flow trigger server-side logic and return structured outputs for downstream steps.',
	},
	{
		title: 'Liquid Requests',
		copy: 'Transform payloads or build dynamic request bodies with Liquid that runs inside APIEase.',
	},
	{
		title: 'Secure parameters',
		copy: 'Keep API keys and secrets on the server; storefronts and callers never see confidential values.',
	},
];

const steps = [
	{
		title: 'Define the request',
		copy: 'Choose HTTP, Flow, or Liquid; add inputs, map confidential parameters, and chain follow-up calls.',
	},
	{
		title: 'Trigger from any source',
		copy: 'Run the same definition from webhooks, schedules, proxy endpoints, the storefront app proxy, remote clients, or manually.',
	},
	{
		title: 'APIEase executes and returns',
		copy: 'The managed runtime injects secrets at execution, handles concurrency and tracking, and responds to the caller.',
	},
];
---

<Layout>
	<div class="page">
		<Backdrop />

		<Header />

		<main>
			<section class="hero">
				<h1>The API Integration And Automation Platform</h1>
				<p class="lede">
					APIEase is a managed system where your API requests, workflows, and custom logic
					run, so you don’t have to build or maintain that infrastructure yourself.
				</p>
			</section>

			<section id="product" class="panel">
				<div class="panel-heading">
					<div class="kicker">What it does</div>
					<h2>One place to run your API and automation work</h2>
					<p>APIEase executes HTTP, Flow, and Liquid requests in a managed runtime, so your logic is reusable and secure.</p>
				</div>
				<div class="capabilities">
					{capabilities.map((item) => (
						<div class="card">
							<div class="icon">
								<span>•</span>
							</div>
							<div>
								<h3>{item.title}</h3>
								<p>{item.copy}</p>
							</div>
						</div>
					))}
				</div>
			</section>

			<section id="workflow" class="panel steps">
				<div class="panel-heading">
					<div class="kicker">How it works</div>
					<h2>Define once. Trigger anywhere.</h2>
					<p>Configure requests in the admin and run them wherever they're needed without shipping a new backend each time.</p>
				</div>
				<div class="step-grid">
					{steps.map((step, index) => (
						<div class="step-card">
							<div class="step-index">Step {index + 1}</div>
							<h3>{step.title}</h3>
							<p>{step.copy}</p>
						</div>
					))}
				</div>
				<div class="trigger-block">
					<div class="trigger-title">Triggers you can turn on day one</div>
					<div class="trigger-tags">
						<span class="tag">Webhooks</span>
						<span class="tag">Schedules</span>
						<span class="tag">Proxy endpoints</span>
						<span class="tag">Storefront app proxy</span>
						<span class="tag">Shopify Flow</span>
						<span class="tag">Remote clients</span>
						<span class="tag">Manual runs</span>
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</div>
</Layout>

<style>
	.tagline {
		font-size: 12px;
		color: var(--muted);
	}

	.hero {
		margin: 110px 0 70px;
		max-width: 880px;
	}

	.eyebrow {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		padding: 8px 12px;
		border: 1px solid var(--border);
		border-radius: 999px;
		color: var(--muted);
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		font-size: 12px;
	}

	h1 {
		font-size: clamp(44px, 6vw, 68px);
		margin: 18px 0 12px;
		line-height: 1.05;
		font-family: 'Space Grotesk', 'Plus Jakarta Sans', sans-serif;
		color: #f6f8ff;
	}

	.lede {
		font-size: 18px;
		line-height: 1.7;
		color: #c6d4f0;
		max-width: 720px;
		margin: 0 0 24px;
	}

	.panel {
		margin: 60px 0;
		padding: 26px;
		border-radius: 24px;
		background: var(--panel);
		border: 1px solid var(--border);
		box-shadow: 0 18px 60px rgba(0, 0, 0, 0.35);
	}

	.panel-heading {
		max-width: 720px;
	}

	.kicker {
		color: var(--primary);
		font-weight: 700;
		letter-spacing: 0.1em;
		font-size: 12px;
		text-transform: uppercase;
		margin-bottom: 8px;
	}

	h2 {
		font-size: 34px;
		margin: 0 0 10px;
		color: #f6f8ff;
	}

	p {
		color: #bdc9e3;
		font-size: 16px;
		line-height: 1.7;
		margin: 0;
	}

	.capabilities {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 16px;
		margin-top: 24px;
	}

	.capabilities .card {
		padding: 18px;
		border-radius: 16px;
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid var(--border);
		display: flex;
		gap: 12px;
	}

	.icon {
		width: 32px;
		height: 32px;
		border-radius: 10px;
		background: linear-gradient(135deg, var(--primary), var(--accent-3));
		display: grid;
		place-items: center;
		color: #031021;
		font-weight: 700;
	}

	h3 {
		margin: 0 0 8px;
		color: #f6f8ff;
		font-size: 20px;
	}

	.steps .step-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 16px;
		margin-top: 24px;
	}

	.step-card {
		padding: 18px;
		border-radius: 16px;
		border: 1px solid var(--border);
		background: rgba(255, 255, 255, 0.015);
	}

	.step-index {
		font-size: 13px;
		text-transform: uppercase;
		letter-spacing: 0.18em;
		color: var(--primary);
		margin-bottom: 10px;
		font-weight: 700;
	}

	.trigger-block {
		margin-top: 28px;
		padding: 18px;
		border-radius: 16px;
		border: 1px solid var(--border);
		background: rgba(255, 255, 255, 0.02);
	}

	.trigger-title {
		font-weight: 700;
		color: #f6f8ff;
		margin-bottom: 10px;
		font-size: 16px;
	}

	.trigger-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}

	.tag {
		display: inline-flex;
		align-items: center;
		padding: 7px 12px;
		border-radius: 999px;
		border: 1px solid var(--border);
		color: var(--muted);
		background: rgba(255, 255, 255, 0.03);
		font-weight: 600;
		font-size: 14px;
		letter-spacing: 0.01em;
	}

	.testimonial {
		display: grid;
		grid-template-columns: 2fr 1.2fr;
		gap: 20px;
		align-items: center;
	}

	.quote {
		background: rgba(255, 255, 255, 0.02);
		border: 1px solid var(--border);
		border-radius: 18px;
		padding: 22px;
	}

	.quote p {
		font-size: 18px;
		color: #e4ebfd;
		margin-bottom: 18px;
	}

	.person {
		display: flex;
		gap: 12px;
		align-items: center;
	}

	.avatar {
		width: 48px;
		height: 48px;
		border-radius: 12px;
		background: linear-gradient(120deg, var(--accent-2), var(--accent-1));
		display: grid;
		place-items: center;
		color: #0c101a;
		font-weight: 700;
		font-size: 18px;
	}

	.name {
		color: #f6f8ff;
		font-weight: 700;
	}

	.role {
		color: #93abd2;
		font-size: 14px;
	}

	.cta-stack h3 {
		margin-top: 0;
	}

	@media (max-width: 960px) {
		.hero {
			margin-top: 70px;
		}

		.testimonial {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 640px) {
		h1 {
			font-size: 36px;
		}

		.panel {
			padding: 18px;
		}
	}
</style>
